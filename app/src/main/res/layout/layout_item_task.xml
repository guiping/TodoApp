<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="5dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingEnd="5dp">


    <TextView
        android:id="@+id/ck_statue"
        android:textAppearance="?android:textAppearanceSmall"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="3dp"
        android:background="@mipmap/icon_no_sel"
        android:layout_gravity="center_vertical"
        />

    <TextView
        android:id="@+id/tv_task_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/ck_statue"
        android:fontFamily="@font/robotoslab_regular"
        android:text="这是今日任务内容"
        android:textColor="@color/brand_primary"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tv_task_create_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_task_info"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:text="2023-12-04"
        android:fontFamily="@font/robotoslab_medium"
        android:layout_marginEnd="10dp"
        android:textColor="@color/teal_700"
        android:textSize="11dp" />
</RelativeLayout>