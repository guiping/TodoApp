<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TodoApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_e67e22</item>
        <item name="colorPrimaryVariant">@color/color_d35400</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TodoApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TodoApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TodoApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 定义NavigationView的样式 -->
    <style name="MyNavigationViewStyle" parent="Widget.Design.NavigationView">
        <item name="android:layout_marginTop">8dp</item> <!-- 设置整体顶部间距 -->
        <item name="android:layout_marginBottom">8dp</item> <!-- 设置整体底部间距 -->
        
    </style>
    <!-- 定义自定义item样式 -->
    <style name="MyNavigationItemTextAppearance" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">14sp</item> <!-- 设置item中文字的大小 -->
    </style>
</resources>